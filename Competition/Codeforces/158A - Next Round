#include <iostream>
#include <vector>
using namespace std; 

vector<int> scores;
int N, K;

void read(){
	for(int i = 0; i < N; i++){
		int score;
		cin >> score; 
		scores.push_back(score);
	}
}

int main(){
	cin >> N >> K;
	read();
	int c = 0;
	int min = scores[K - 1];
	for(int i  = 0; i < N; i++){
		if(scores[i] > 0 && scores[i] >= min){
			c++;		
		}
	}
	cout << c << endl;
}
